<div class="col-md-10 col-md-offset-1">
	<h2>Người dùng <a href="/users/new" class="btn btn-primary text-right btn-sm">Thêm người dùng</a></h2>
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Id</th>
				<th>Họ và tên</th>
				<th>Email</th>
				<th>Ngày sinh</th>
				<th>Số điện thoại</th>
				<th>Địa chỉ</th>
				<th>Số CMND</th>
				<th>Số Giấy phép lái xe</th>
			</tr>
		</thead>
		<tbody>
			{{#users}}
				<tr>
					<td>{{id}}</td>
					<td>{{full_name}}</td>
					<td>{{email}}</td>
					<td>{{dob}}</td>
					<td>{{phone}}</td>
					<td>{{address}}</td>
					<td>{{identity_number}}</td>
					<td>{{license_number}}</td>
					<td>
						<a href="/users/{{id}}/detail" class="btn btn-success btn-sm">Xem</a>
						<a href="/users/{{id}}/edit" class="btn btn-warning btn-sm">Sửa</a>
						<a href="/users/{{id}}/delete" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this this?')">Xoá</a>
					</td>
				</tr>
			{{/users}}
		</tbody>
	</table>
</div>