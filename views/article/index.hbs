<div class="col-md-10 col-md-offset-1">
	<h2>Bài Viết <a href="/articles/new" class="btn btn-primary text-right btn-sm">Thêm bài viết</a></h2>
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Id</th>
				<th>Tiêu đề bài viết</th>
		</thead>
		<tbody>
			{{#each articles}}
				<tr>
					<td>{{dataValues.id}}</td>
					<td>{{dataValues.title}}</td>
					<td>
						<a href="/vehicles/{{dataValues.id}}/detail" class="btn btn-success btn-sm">view</a>
						<a href="/vehicles/{{dataValues.id}}/edit" class="btn btn-warning btn-sm">Edit</a>
						<a href="/vehicles/{{dataValues.id}}/delete" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
					</td>
				</tr>
			{{/each}}
		</tbody>
	</table>
</div>